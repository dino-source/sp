{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++2b",
                "-pthread",
                "-Wextra",
                "-Wall",
                "-Wpedantic",
                "-Wconversion",
                "-Wshadow",
                "-Wunreachable-code",
                "-Wunused",
                "-Wold-style-cast",
                "-Wimplicit-fallthrough",
                "-Wno-unused-parameter",
                "-Wmissing-declarations",
                "-Wmissing-noreturn",
                "-Wnoexcept",
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}